package views

import "go-fiber/views/components"
import "go-fiber/views/layout"
import "go-fiber/views/widgets"

templ Login() {
	@layout.Layout(layout.LayoutProps{
		Title:           "Вход на сайт",
		MetaDescription: "Войти на сайт поиска работы мечты",
	}) {
		<main>
			@LoginStyle()
			@layout.Header() {
				@components.Title("Войти на сайте")
				@components.SubTitle("Войдите под своей учётной записью")
				@widgets.LoginForm()
			}
		</main>
	}
}

templ LoginStyle() {
}
